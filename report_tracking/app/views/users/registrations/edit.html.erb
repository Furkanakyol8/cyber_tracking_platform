<div class="d-flex justify-content-center w-100">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
<div class = "container">

    <form class="col mb-3">
      <div class="form-group row">
        <br><%= f.label :first_name, class:"form-label", autofocus: true %><br />
        <%= f.text_field :first_name, class:"form-control", id:"inputEmail4" %>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, class:"form-label" %><br />
        <%= f.text_field :last_name, class:"form-control", id:"inputPassword4" %>
      </div>

      <div class="form-group row">
        <%= f.label :phone, class:"form-label" %><br />
        <%= f.text_field :phone, class:"form-control", id:"inputAddress" %>
      </div>

      <div class="form-group row">
        <%= f.label :username, class:"form-label" %><br />
        <%= f.text_field :username, class:"form-control", id:"inputAddress2" %>
      </div>


      <div class="form-group row">
        <%= f.label :company_info, class:"form-label" %><br />
        <%= f.text_area :company_info, class:"form-control", id:"inputCity" %>
      </div>
  
      <div class="form-group row">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputZip" %>
      </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

      <div class="form-group row">
        <%= f.label :password, class:"form-label" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputZip" %>
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class:"form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputZip" %>
      </div>

      <div class="form-group row">
      <%= f.label :current_password, class:"form-label" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", id:"inputZip" %>
      </div>
  
      <div class="form-group row  d-flex justify-content-end">
              
        <%= f.submit "Update", class:"btn btn-primary" %>
      </div>

    </form>
    <div class="row d-flex justify-content-between">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-primary" %>
        <%= link_to "Back", :back, class:"btn btn-primary" %>

    </div>


  <% end %>

  </div>



</div>