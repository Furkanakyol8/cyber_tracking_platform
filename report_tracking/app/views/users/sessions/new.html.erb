<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4"><b>Rapor Takip Sistemine Hoşgeldiniz</b></h1>
                                    </div>

                                    <%= form_for(resource, as: resource_name, :html => {:class => 'user'}, url: session_path(resource_name)) do |f| %>
                                     
                                      <div class="form-group">
                                        <%= f.email_field :email, class: "form-control form-control-user", placeholder: "Email adresinizi giriniz", autofocus: true, autocomplete: "email" %>
                                      </div>

                                      <div class="form-group">
                                        <%= f.password_field :password, class: "form-control form-control-user", placeholder: "Şifrenizi giriniz", autocomplete: "current-password" %>
                                      </div>

                                      <% if devise_mapping.rememberable? %>
                                        <div class="form-group">
                                          <div class="custom-control custom-checkbox small">
                                          
                                            <%= f.check_box :remember_me, class: "custom-control-input" %>
                                            <%= f.label :remember_me, class: "custom-control-label" %>
                                          </div>
                                        </div>
                                      <% end %>

                                      <div class="actions">
                                        <%= f.submit "Giriş Yap", class:"btn btn-primary btn-user btn-block" %>
                                      </div>
                                    <% end %>

                                    
                                  
                                    <%= render "users/shared/links" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

   

</body>

