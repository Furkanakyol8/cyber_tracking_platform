<nav aria-label="breadcrumb">
					<ol class="breadcrumb" style="margin: 0">
						 <%= breadcrumb :home %> <%= breadcrumb :reports %>
					</ol>
</nav>
<div class="p-5 h-100" style="background-color: RGBA(	211,211,211, 0.3)">
  <div class="d-grid justify-content-md-end">
  <% if current_user.admin?%>
  <%= button_to "Yeni Rapor", new_report_path, method: :get, class:"btn btn-light mb-2" %></button>
  <% end %>
  </div>
    <div class="d-grid place-items-start h-100">
      <div class="container text-center">
        <div class="row">
          <div class="col-md-12">
            <table class="table table-hover table-bordered">
              <thead class="table-active">
              <tr class="lead">
              <th scope="row" class="text-primary lead col-1 "><b>#</b></th>
              <th scope="row" class="text-primary lead col-2 "><b>Başlık</b></th>
              <th scope="row" class="text-primary lead col-5 "><b>Açıklama</b></th>
              <th scope="row" class="text-primary lead col-1 "> </th>
              </tr>
            </thead>
            <tbody>
              <% @reports.first(10).each do |report| %>
              <tr>
                <th><%= report.id %></th>
                <td><%= report.title %></td>
                <td class="col-2"><%= report.description %></td>
                <td><%= button_to "Göster", report, method: :get, class:"btn btn-light mb-2" %></td>
                
              </tr>
              <% end %>
            </tbody>
            </table>
          </div>
        
        </div>

      </div>
    </div>
 </div>