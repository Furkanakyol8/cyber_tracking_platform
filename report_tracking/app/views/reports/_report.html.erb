<div class="p-5 h-100" style="background-color: RGBA(	211,211,211, 0.3)">
	<div class="d-grid place-items-start h-100">
		<div class="container text-center">
			<div class="row">
				<div class="col-md-12">
					<table class="table table-hover table-bordered">
						<thead class="table-active">
							<tr class="lead">
								<th scope="row" class="text-primary lead col-1"><b>#</b></th>
								<th scope="row" class="text-primary lead col-2"><b>Title</b></th>
								<th scope="row" class="text-primary lead col-5"><b>Description</b></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<th scope="row" class="text-primary lead col-1"></th>
								<th><%= report.title %></th>
								<td class="col-2"><%= report.description %></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			<div class="d-grid col-md-2 mx-auto">
				<% if current_user.admin?%> <%= button_to "Raporu Sil", @report, method: :delete, class:"btn btn-light mb-2" %> <%= button_to "Raporu Düzenle", edit_report_path(@report), method: :get, class:"btn btn-light mb-2" %> <%=
				button_to "Raporlara Geri Dön", reports_path, method: :get, class:"btn btn-light mb-3" %> <% else %> <%= button_to "Raporlara Geri Dön", reports_path, method: :get, class:"btn btn-light mb-3" %> <% end %>
			</div>
		</div>
	</div>
</div>
