<nav aria-label="breadcrumb">
					<ol class="breadcrumb" style="margin: 0">
						<%= breadcrumb :home %> <%= breadcrumb :customers %> <%= breadcrumb :new_report %>
					</ol>
</nav>


<div class="container mt-5">
  <div class="card shadow-sm bg-light">
    <div class="card-body p-4" style="border-radius: 10px;">
      <table class="table table-light table-striped">
        <thead class="table-light">
          <tr>
            <th scope="row" class="col-2"></th>
            <th scope="row" class="col-4">Başlık</th>
            <th scope="row" class="col-4">Açıklama</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row" class="col-1"></th>
            <th><%= report.title %></th>
            <td class="col-2"><%= report.description %></td>
          </tr>
        </tbody>
      </table>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <% if current_user.admin? %>
          <%= button_to "Raporu Sil", @report, method: :delete, class:"btn btn-danger mb-2 me-2" %>
          <%= button_to "Raporu Düzenle", edit_report_path(@report), method: :get, class:"btn btn-warning mb-2 me-2" %>
        <% end %>
        <%= button_to "Raporlara Geri Dön", reports_path, method: :get, class:"btn btn-primary mb-2" %>
      </div>
    </div>
  </div>
</div>

