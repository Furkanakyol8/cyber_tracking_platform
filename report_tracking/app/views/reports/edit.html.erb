<nav aria-label="breadcrumb">
   <ol class="breadcrumb">
      <%= breadcrumb :home %>
      <%= breadcrumb :customers %>
      <%= breadcrumb :new_report %>
      <%= breadcrumb :edit_report %>
   </ol>
</nav>

<div class="container bg-light mt-5">
   <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
         <div class="card shadow-md" style="background-image: linear-gradient(0deg, #0b1e40, #1a4896);">
            <div class="card-header" style="background-image: linear-gradient(0deg, #0b1e40, #1a4896);">
               <h3 class="card-title text-light">Raporu Düzenle</h3>
            </div>
            <div class="card-body">
               <%= render "form", report: @report %>
            </div>
            
               <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                  <%= button_to "Raporu Görüntüle", @report, method: :get, class:"btn btn-primary mb-2" %>
                  <%= button_to "Raporlara Geri Dön", reports_path, method: :get, class:"btn btn-primary mb-2" %>
               </div>
           
         </div>
      </div>
   </div>
</div>


