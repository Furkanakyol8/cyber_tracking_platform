<nav aria-label="breadcrumb">
   <ol class="breadcrumb" style="margin: 0">
      <%= breadcrumb :home %> <%= breadcrumb :customers %>
   </ol>
</nav>
<script
   src="https://code.jquery.com/jquery-3.6.3.js"
   integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
   crossorigin="anonymous"></script>
<script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<div class="p-5 h-100" style="background-color: RGBA(	211,211,211, 0.3)">
   <div class="d-grid place-items-start h-100">
      <div class="container text-center">
         <div class="row">
            <div class="col-md-12">
               <table id="myTable" class="table table-striped table-sm">
                  <thead>
                     <tr>
                        <th scope="row" class="text-primary lead"><b></b></th>
                        <th scope="row" class="text-primary lead"><b>İsim</b></th>
                        <th scope="row" class="text-primary lead"><b>Soyisim</b></th>
                        <th scope="row" class="text-primary lead"><b>Kullanıcı Adı</b></th>
                        <th scope="row" class="text-primary lead col-4"><b>Email</b></th>
                        <th scope="row" class="text-primary lead col-3"><b>Telefon</b></th>
                        <th scope="row" class="text-primary lead"><b>Şirket Adı</b></th>
                        <th scope="row" class="text-primary lead"><b>Düzenle</b></th>
                        <th scope="row" class="text-primary lead"><b>Rapor</b></th>
                     </tr>
                  </thead>
                  <tbody>
                     <% @users.first(10).each do |user| %>
                     <tr>
                        <th scope="row" class="text-primary lead col-1"><%= user.id %></th>
                        <td class="col-2"><%= user.first_name %></td>
                        <td class="col-2"><%= user.last_name %></td>
                        <td class="col-2"><%= user.username %></td>
                        <td class="col-2"><%= user.email %></td>
                        <td class="col-2"><%= user.phone %></td>
                        <td class="col-2"><%= user.company_info %></td>
                        <td class="col-2"><%= button_to "Düzenle", edit_customer_path(user.id), method: :get, class:"btn btn-light mb-2" %></td>
                        <td class="col-2"><%= button_to "Rapor Ekle", new_report_path(user.id), method: :get, class:"btn btn-light mb-2"%></td>
                     </tr>
                     <% end %>
                  </tbody>
               </table>
               <div id="pagination"></div>
               <script>
                  $(document).ready(function(){
                     $('#myTable').DataTable({
                  	"paging" : true,
                         "pagingType": "full_numbers",
                         "lengthMenu": [5,10,15],
                         "bLengthChange": false,
                         "bFilter": true,
                         "language": {
                               "paginate": {
                                   "first": "İlk",
                                   "previous": "Önceki",
                                   "next": "Sonraki",
                                   "last": "Son"
                               },
                               "search": "Ara:",
                               
                  }
                  });
                  });
               </script>
            </div>
        </div>
    </div>
</div>
